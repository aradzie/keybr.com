<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE keyboard SYSTEM "../dtd/ldmlKeyboard.dtd">
<keyboard locale="fa-t-k0-windows">
	<version platform="10" number="$Revision$"/>
	<names>
		<name value="Persian"/>
	</names>
	<settings fallback="omit"/>
	<keyMap>
		<map iso="E00" to="÷"/> <!-- ` -->
		<map iso="E01" to="1"/>
		<map iso="E02" to="2"/>
		<map iso="E03" to="3"/>
		<map iso="E04" to="4"/>
		<map iso="E05" to="5"/>
		<map iso="E06" to="6"/>
		<map iso="E07" to="7"/>
		<map iso="E08" to="8"/>
		<map iso="E09" to="9"/>
		<map iso="E10" to="0"/>
		<map iso="E11" to="-"/>
		<map iso="E12" to="="/>
		<map iso="D01" to="ض"/> <!-- Q -->
		<map iso="D02" to="ص"/> <!-- W -->
		<map iso="D03" to="ث"/> <!-- E -->
		<map iso="D04" to="ق"/> <!-- R -->
		<map iso="D05" to="ف"/> <!-- T -->
		<map iso="D06" to="غ"/> <!-- Y -->
		<map iso="D07" to="ع"/> <!-- U -->
		<map iso="D08" to="ه"/> <!-- I -->
		<map iso="D09" to="خ"/> <!-- O -->
		<map iso="D10" to="ح"/> <!-- P -->
		<map iso="D11" to="ج"/> <!-- [ -->
		<map iso="D12" to="چ"/> <!-- ] -->
		<map iso="C01" to="ش"/> <!-- A -->
		<map iso="C02" to="س"/> <!-- S -->
		<map iso="C03" to="ی"/> <!-- D -->
		<map iso="C04" to="ب"/> <!-- F -->
		<map iso="C05" to="ل"/> <!-- G -->
		<map iso="C06" to="ا"/> <!-- H -->
		<map iso="C07" to="ت"/> <!-- J -->
		<map iso="C08" to="ن"/> <!-- K -->
		<map iso="C09" to="م"/> <!-- L -->
		<map iso="C10" to="ک"/> <!-- ; -->
		<map iso="C11" to="گ"/> <!-- ' -->
		<map iso="C12" to="پ"/> <!-- (key to right of ') -->
		<map iso="B00" to="پ"/> <!-- (key to left of Z) -->
		<map iso="B01" to="ظ"/> <!-- Z -->
		<map iso="B02" to="ط"/> <!-- X -->
		<map iso="B03" to="ز"/> <!-- C -->
		<map iso="B04" to="ر"/> <!-- V -->
		<map iso="B05" to="ذ"/> <!-- B -->
		<map iso="B06" to="د"/> <!-- N -->
		<map iso="B07" to="ئ"/> <!-- M -->
		<map iso="B08" to="و"/> <!-- , -->
		<map iso="B09" to="."/>
		<map iso="B10" to="/"/>
		<map iso="A03" to=" "/> <!-- space -->
	</keyMap>
	<keyMap modifiers="shift+caps?">
		<map iso="E00" to="×"/> <!-- `  base=÷ -->
		<map iso="E01" to="!"/> <!-- 1 -->
		<map iso="E02" to="@"/> <!-- 2 -->
		<map iso="E03" to="#"/> <!-- 3 -->
		<map iso="E04" to="$"/> <!-- 4 -->
		<map iso="E05" to="%"/> <!-- 5 -->
		<map iso="E06" to="^"/> <!-- 6 -->
		<map iso="E07" to="&amp;"/> <!-- 7 -->
		<map iso="E08" to="*"/> <!-- 8 -->
		<map iso="E09" to=")"/> <!-- 9 -->
		<map iso="E10" to="("/> <!-- 0 -->
		<map iso="E11" to="_"/> <!-- - -->
		<map iso="E12" to="+"/> <!-- = -->
		<map iso="D01" to="\u{64B}"/> <!-- Q  base=ض  to= ً  -->
		<map iso="D02" to="\u{64C}"/> <!-- W  base=ص  to= ٌ  -->
		<map iso="D03" to="\u{64D}"/> <!-- E  base=ث  to= ٍ  -->
		<map iso="D04" to="ريال"/> <!-- R  base=ق -->
		<map iso="D05" to="،"/> <!-- T  base=ف -->
		<map iso="D06" to="؛"/> <!-- Y  base=غ -->
		<map iso="D07" to=","/> <!-- U  base=ع -->
		<map iso="D08" to="]"/> <!-- I  base=ه -->
		<map iso="D09" to="["/> <!-- O  base=خ -->
		<map iso="D10" to="\"/> <!-- P  base=ح -->
		<map iso="D11" to="}"/> <!-- [  base=ج -->
		<map iso="D12" to="{"/> <!-- ]  base=چ -->
		<map iso="C01" to="\u{64E}"/> <!-- A  base=ش  to= َ  -->
		<map iso="C02" to="\u{64F}"/> <!-- S  base=س  to= ُ  -->
		<map iso="C03" to="\u{650}"/> <!-- D  base=ی  to= ِ  -->
		<map iso="C04" to="\u{651}"/> <!-- F  base=ب  to= ّ  -->
		<map iso="C05" to="ۀ"/> <!-- G  base=ل -->
		<map iso="C06" to="آ"/> <!-- H  base=ا -->
		<map iso="C07" to="ـ"/> <!-- J  base=ت -->
		<map iso="C08" to="«"/> <!-- K  base=ن -->
		<map iso="C09" to="»"/> <!-- L  base=م -->
		<map iso="C10" to=":"/> <!-- ;  base=ک -->
		<map iso="C11" to="\u{22}"/> <!-- '  base=گ  to= "  -->
		<map iso="C12" to="|"/> <!-- (key to right of ')  base=پ -->
		<map iso="B00" to="|"/> <!-- (key to left of Z)  base=پ -->
		<map iso="B01" to="ة"/> <!-- Z  base=ظ -->
		<map iso="B02" to="ي"/> <!-- X  base=ط -->
		<map iso="B03" to="ژ"/> <!-- C  base=ز -->
		<map iso="B04" to="ؤ"/> <!-- V  base=ر -->
		<map iso="B05" to="إ"/> <!-- B  base=ذ -->
		<map iso="B06" to="أ"/> <!-- N  base=د -->
		<map iso="B07" to="ء"/> <!-- M  base=ئ -->
		<map iso="B08" to="&lt;"/> <!-- ,  base=و -->
		<map iso="B09" to="&gt;"/> <!-- . -->
		<map iso="B10" to="؟"/> <!-- / -->
		<map iso="A03" to=" "/> <!-- space -->
	</keyMap>
	<keyMap modifiers="ctrl+caps?">
		<map iso="E10" to="ہ"/> <!-- 0 -->
		<map iso="D11" to="\u{1B}"/> <!-- [  base=ج -->
		<map iso="D12" to="\u{1D}"/> <!-- ]  base=چ -->
		<map iso="C12" to="\u{1C}"/> <!-- (key to right of ')  base=پ -->
		<map iso="A03" to=" "/> <!-- space -->
	</keyMap>
	<keyMap modifiers="ctrl+shift+caps?">
		<map iso="E01" to="\u{200D}"/> <!-- 1 -->
		<map iso="E02" to="\u{200C}"/> <!-- 2 -->
		<map iso="E03" to="\u{200E}"/> <!-- 3 -->
		<map iso="E04" to="\u{200F}"/> <!-- 4 -->
	</keyMap>
</keyboard>
